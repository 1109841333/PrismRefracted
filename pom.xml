<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <!-- Project metadata -->

  <groupId>me.botsko</groupId>
  <artifactId>prism</artifactId>
  <version>2.0.6</version>

  <name>prism</name>

  <!-- Project dependencies -->

  <repositories>
    <!-- For Spigot + Bukkit API -->
    <repository>
      <id>spigot-repo</id>
      <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
    </repository>
    <!-- For WorldEdit API -->
    <repository>
      <id>sk89q-repo</id>
      <url>http://maven.sk89q.com/repo/</url>
    </repository>
    <!-- For Fanciful dependency -->
    <repository>
      <id>fanciful-mvn-repo</id>
      <url>http://repo.stealthyone.com/content/groups/public/</url>
    </repository>
  </repositories>

  <dependencies>
    <!--Spigot + Bukkit API-->
    <dependency>
      <groupId>org.spigotmc</groupId>
      <artifactId>spigot-api</artifactId>
      <version>1.11-R0.1-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>com.sk89q</groupId>
      <artifactId>worldedit</artifactId>
      <version>6.0.0-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.tomcat</groupId>
      <artifactId>tomcat-jdbc</artifactId>
      <version>7.0.52</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>mkremins</groupId>
      <artifactId>fanciful</artifactId>
      <version>0.3.3-SNAPSHOT</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>

  <!-- Project settings -->

  <!-- Enforce Unicode when compiling Java -->
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <build>
    <!-- Replaces tokens like "${project.version}" in plugin.yml -->
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
        <includes>
          <include>**/plugin.yml</include>
        </includes>
      </resource>

      <resource>
        <directory>src/main/resources</directory>
        <filtering>false</filtering>
        <excludes>
          <exclude>**/plugin.yml</exclude>
        </excludes>
      </resource>
    </resources>

    <plugins>
      <!-- Specifies minimum Java version and Unicode for compile and runtime -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.0.2</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <encoding>${project.build.sourceEncoding}</encoding>
          <showDeprecation>false</showDeprecation>
          <showWarnings>true</showWarnings>
        </configuration>
      </plugin>

      <!-- Ensure resource files are processed as Unicode -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <version>3.0.1</version>
        <configuration>
          <encoding>${project.build.sourceEncoding}</encoding>
        </configuration>
      </plugin>

      <!-- Shade dependencies into built JAR -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.3</version>

        <configuration>
          <!-- Disable auto generation of dependency-reduced-pom.xml -->
          <createDependencyReducedPom>false</createDependencyReducedPom>

          <!-- Include only direct dependencies -->
          <artifactSet>
            <includes>
              <include>org.apache.tomcat:tomcat-jdbc</include>
              <include>org.apache.tomcat:tomcat-juli</include>
              <include>mkremins:fanciful</include>
            </includes>
          </artifactSet>
        </configuration>

        <!-- Perform shading for package phase -->
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>

  <!-- Defines a single profile: production -->

  <!-- This profile is necessary; it makes it so shaded dependencies are relocated to another   -->
  <!-- package name, to prevent conflict with other plugins. However, it is a profile because   -->
  <!-- relocation breaks debugging, so excluding this profile is a way to turn off relocation.  -->

  <!-- This profile will automatically activate if the "debug" system property is undefined,     -->
  <!-- which makes it default behavior. IntelliJ and other IDE users should disable this profile -->
  <!-- profile in the UI when debugging. -->
  <profiles>
    <profile>
      <id>production</id>

      <!-- Automatically activate profile unless "debug" system property is defined -->
      <activation>
        <property>
          <name>!debug</name>
        </property>
      </activation>

      <build>
        <plugins>

          <!-- Shade and relocate certain dependencies -->
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-shade-plugin</artifactId>
            <version>2.3</version>

            <configuration>
              <relocations>
                <!-- Tomcat JDBC dependency -->
                <relocation>
                  <pattern>org.apache.tomcat.jdbc</pattern>
                  <shadedPattern>com.helion3.prism.libs.org.apache.tomcat.jdbc</shadedPattern>
                </relocation>

                <!-- Tomcat JDBC JULI dependency -->
                <relocation>
                  <pattern>org.apache.juli</pattern>
                  <shadedPattern>com.helion3.prism.libs.org.apache.juli</shadedPattern>
                </relocation>

                <!-- Fanciful dependency -->
                <relocation>
                  <pattern>mkremins.fanciful</pattern>
                  <shadedPattern>com.helion3.prism.libs.mkremins.fanciful</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </plugin>

        </plugins>
      </build>
    </profile>
  </profiles>
</project>
